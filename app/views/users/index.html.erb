<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <%= render html: "POST" %>
    <% user.posts.each do |post| %>
      <%= render post %>
      <%= render html: "COMMENTS" %>
      <% post.comments.each do |comment| %>
        <%= puts "here" %>
		    <%= render comment %>
      <% end %>
    <% end %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
